<UserControl x:Class="WPF_MVVM.UserControls.VehicleTypePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MVVM.UserControls"
             mc:Ignorable="d" Height="144" Width="291">
    <Grid Background="White">
        <Label x:Name="CurrentTypeLabel" Content="Car" Margin="10,70,140,0" Height="39" VerticalAlignment="Top"/>
        <Button x:Name="ChangeTypeButton" Content="Change vehicle type" Click="ChangeType_ButtonClick" Margin="10,21,140,0" Height="39" VerticalAlignment="Top"/>
        <Image x:Name="VehicleTypeImage" Height="100" Margin="0,0,20,0" VerticalAlignment="Center" Source="/UserControls/car.png" HorizontalAlignment="Right" Width="100"/>
    </Grid>
</UserControl>
