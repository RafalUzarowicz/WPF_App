<UserControl x:Class="WPF_MVVM.UserControls.VehicleTypePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MVVM.UserControls"
             mc:Ignorable="d" Height="100" Width="100">
    <Viewbox Stretch="Uniform">
        <Grid Background="White">
            <Button x:Name="ChangeTypeButton" Click="ChangeType_ButtonClick" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="Hand">
                <Image x:Name="VehicleTypeImg" VerticalAlignment="Stretch" Source="/UserControls/car.png" HorizontalAlignment="Stretch"/>
            </Button>
        </Grid>
    </Viewbox>
</UserControl>
